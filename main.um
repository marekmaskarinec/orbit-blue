
import (
	"window.um"

	"coulau/logs.um"

	"src/res.um"
	"src/game.um"
)

const TAG = "main.um"

fn init*() {
	logs.init()
	logs.setGlobalLogLevel(logs.LogLevelDbg)

	window.setup("ORBITBLUE", 4 * 384, 4 * 216)
	window.setViewport({768, 432})

	res.loadImages()
	res.loadFonts()

	game.init()

	g := new(game.Game)
	g.mk()

	window.onFrame.register(|g| {
		g.update()

		g.draw()
	})
}
